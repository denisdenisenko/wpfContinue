<Window x:Class="wpfContinue.toolbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfContinue"
        mc:Ignorable="d"
        Title="toolbox" Height="300" Width="400">
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Click="Button_Click" ToolTip="Delete txt">
                    <Image Width="50" Height="50" Source="http://simpleicon.com/wp-content/uploads/icon2.png"></Image>
                </Button>
                <Separator/>
                <Label>Font size color</Label>
                <ComboBox Name="myCombo" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem>10</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">20</ComboBoxItem>
                    <ComboBoxItem>30</ComboBoxItem>

                </ComboBox>
            </ToolBar>

        </ToolBarTray>
        <TextBox x:Name="myTxtBox"></TextBox>
    </DockPanel>
</Window>
